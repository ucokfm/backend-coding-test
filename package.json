{
  "name": "backend-coding-test",
  "version": "1.0.0",
  "description": "A coding assessment for Xendit backend interviews",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build-doc": "redoc-cli bundle ./doc/openapi.yaml -o ./doc/index.html",
