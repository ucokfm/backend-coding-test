  ],
  "author": "Bo",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.16.4",
    "sqlite3": "^4.0.6"
  },
  "devDependencies": {
    "artillery": "^1.6.0-28",
    "eslint": "^6.0.0",
    "forever": "^1.0.0",
    "husky": "^2.4.1",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "redoc-cli": "^0.8.4",
    "supertest": "^4.0.2",
    "winston": "^3.2.1"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test"
    }
  }
